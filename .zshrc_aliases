alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias i3config="vim ~/.config/i3/config"

alias top='top -o %CPU'
alias ll='ls -laFh --group-directories-first'
alias zip='zip -9'
alias gzip='gzip -9'
alias bzip2='bzip2 -9'
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias ra='ranger'

alias tmuxsession='tmux -u new-session -A -s main'

alias cl++14="g++ --std=c++14 -pthread -Wall -Wextra -O2"
alias g++14="g++ --std=c++14 -pthread -Wall -Wextra -O2"
alias g++17="g++ --std=c++17 -pthread -Wall -Wextra -O2"
alias g++03="g++ -Wall -Wextra -O2"
alias c11="gcc --std=c11 -Wall -Wextra -O2"
alias make='make -j$(nproc)'

